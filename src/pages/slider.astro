---
import GraphicSpecie from "../components/GraphicSpecie.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="carousel w-full" id="carousel">
        <div class="carousel-item w-full">
            <GraphicSpecie specie="Adelie" />
        </div>
        <div class="carousel-item w-full">
            <GraphicSpecie specie="Chinstrap" />
        </div>
        <div class="carousel-item w-full">
            <GraphicSpecie specie="Gentoo" />
        </div>
    </div>
    
    <div class="flex justify-center w-full py-4">
        <input 
            type="range" 
            min="0" 
            max="2" 
            value="0" 
            class="range range-primary w-64" 
            id="slider"
        />
    </div>
    
    <div class="flex justify-center w-full py-2">
        <div class="flex gap-1">
            <span class="text-xs">Adelie</span>
            <span class="text-xs">Chinstrap</span>
            <span class="text-xs">Gentoo</span>
        </div>
    </div>
</Layout>

<script>
    const slider = document.getElementById('slider');
    const carousel = document.getElementById('carousel');
    const slides = carousel.querySelectorAll('.carousel-item');
    
    slider.addEventListener('input', (e) => {
        const slideIndex = parseInt(e.target.value);
        slides.forEach((slide, index) => {
            slide.style.transform = `translateX(-${slideIndex * 100}%)`;
        });
    });
</script>

<style>
    .carousel {
        overflow: hidden;
    }
    
    .carousel-item {
        transition: transform 0.3s ease;
        flex: none;
    }
</style>