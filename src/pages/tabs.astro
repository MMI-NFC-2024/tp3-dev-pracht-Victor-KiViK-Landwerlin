---
import { Tabs, TabsList, TabsTab, TabsPanel } from 'accessible-astro-components'
import GraphicSpecie from "../components/GraphicSpecie.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <Tabs>
        <TabsList>
            <TabsTab id="tab1" controls="panel1" selected>Adelie</TabsTab>
            <TabsTab id="tab2" controls="panel2">Chinstrap</TabsTab>
            <TabsTab id="tab3" controls="panel3">Gentoo</TabsTab>
        </TabsList>

        <TabsPanel id="panel1" labelledby="tab1" selected>
            <GraphicSpecie specie="Adelie" />
        </TabsPanel>
        <TabsPanel id="panel2" labelledby="tab2">
            <GraphicSpecie specie="Chinstrap" />
        </TabsPanel>
        <TabsPanel id="panel3" labelledby="tab3">
            <GraphicSpecie specie="Gentoo" />
        </TabsPanel>
    </Tabs>
</Layout>