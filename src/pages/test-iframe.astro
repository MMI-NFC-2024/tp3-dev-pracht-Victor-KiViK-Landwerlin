---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <h1 class="text-2xl">Accueil TP3</h1>
    
    <div class="mb-4">
        <select 
            onchange="document.querySelector('iframe[name=species-frame]').src = '/species-iframe/' + this.value"
            class="p-2 border rounded"
        >
            <option value="Adelie">Adelie</option>
            <option value="Chinstrap">Chinstrap</option>
            <option value="Gentoo">Gentoo</option>
        </select>
    </div>

    <iframe
        name="species-frame" 
        src="/species-iframe/Adelie"
        width="40%"
        height="400px"
    ></iframe>

</Layout>